<Window x:Class="KIKI.clickShowFiles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIKI"
        mc:Ignorable="d"
        Title="File used in the meeting" Height="300" Width="300" ResizeMode="NoResize">
    <Grid ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.8">
                <GradientStop Color="#FF38387C" Offset="0"/>
                <GradientStop Color="#FF168CD4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListView x:Name="Files" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" SelectionChanged="Files_SelectionChanged" Width="250" ScrollViewer.VerticalScrollBarVisibility="Hidden">
         
        </ListView>

    </Grid>
</Window>
